{
    "compilerOptions": {
      "target": "es2016",
      "module": "ESNext",
      "rootDir": "./src",
      "moduleResolution": "node",
      "typeRoots": [
        "./typings",
        "./node_modules/@types"
      ],
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"]
  }
  